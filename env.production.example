# Configurações de Produção - Passômetro
# Copie este arquivo para .env e ajuste as configurações

# Database
MYSQL_ROOT_PASSWORD=senha_super_segura_123
MYSQL_DATABASE=passometro
MYSQL_USER=passometro
MYSQL_PASSWORD=senha_banco_456

# Redis
REDIS_PASSWORD=senha_redis_789

# Flask
SECRET_KEY=sua_chave_secreta_muito_segura_aqui_123456789
JWT_SECRET_KEY=sua_jwt_chave_secreta_muito_segura_aqui_987654321

# Celery Flower (Monitor)
FLOWER_USER=admin
FLOWER_PASSWORD=senha_admin_123

# Domínio (ajuste para seu domínio)
DOMAIN=seudominio.com.br

# Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_app

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Logs
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Cache
CACHE_TIMEOUT=300
REDIS_CACHE_DB=0

# Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://:senha_redis_789@redis:6379/1
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_STORAGE_OPTIONS={"decode_responses": true}

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# PWA
PWA_NAME=Passômetro
PWA_SHORT_NAME=Passômetro
PWA_DESCRIPTION=Sistema de Passagem de Plantão
PWA_THEME_COLOR=#007bff
PWA_BACKGROUND_COLOR=#ffffff 